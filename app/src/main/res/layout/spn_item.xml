<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/list_green"
    android:orientation="vertical">


    <com.gk.myapp.customs.TextViewTitil
        android:textSize="@dimen/text_size_normal"
        android:id="@+id/txt_spn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_spn"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="14-dec-2016"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/iv_spn"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/ed_bg_logo"
        android:src="@mipmap/ic_drop_down"
        android:scaleType="centerInside"/>

</RelativeLayout>