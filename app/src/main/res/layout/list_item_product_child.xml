<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <com.gk.myapp.customs.TextViewTitil
        android:id="@+id/txt_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/green_text"
        android:textSize="@dimen/text_size_small" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.gk.myapp.customs.TextViewTitil
                android:id="@+id/txt_quantity_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="@string/quantity"
                android:textColor="@color/green_text"
                android:textSize="@dimen/text_size_small" />

            <com.gk.myapp.customs.TextViewTitil
                android:id="@+id/txt_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/green_text"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone"/>

            <com.gk.myapp.customs.TextViewTitil
                android:id="@+id/txt_quantity"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/green_text"
                android:textSize="@dimen/text_size_small" />

            <com.gk.myapp.customs.TextViewTitil
                android:id="@+id/txt_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/green_text"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone"/>

        </LinearLayout>

        <com.gk.myapp.customs.TextViewTitil
            android:id="@+id/txt_add_to_cart"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_leave_status_orange"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="@string/add_to_cart"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>


</LinearLayout>