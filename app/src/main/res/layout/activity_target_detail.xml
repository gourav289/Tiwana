        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:background="@color/list_green"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_total"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/total_target" />

                <com.gk.myapp.customs.TextViewTitil
                    android:id="@+id/txt_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/txt_total_desc"
                    android:layout_toRightOf="@+id/iv_total"
                    android:text="@string/total_target"
                    android:textColor="@color/dark_green_text"
                    android:textSize="@dimen/text_size_normal" />

                <com.gk.myapp.customs.TextViewTitil
                    android:id="@+id/txt_total_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/dark_green_text"
                    android:textSize="@dimen/text_size_normal" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_achieved"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/achived" />

                <com.gk.myapp.customs.TextViewTitil
                    android:id="@+id/txt_achieved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/txt_achieved_desc"
                    android:layout_toRightOf="@+id/iv_achieved"
                    android:text="@string/target_achieved"
                    android:textColor="@color/green_text"
                    android:textSize="@dimen/text_size_normal" />

                <com.gk.myapp.customs.TextViewTitil
                    android:id="@+id/txt_achieved_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/green_text"
                    android:textSize="@dimen/text_size_normal" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pending"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/pending" />

                <com.gk.myapp.customs.TextViewTitil
                    android:id="@+id/txt_pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/txt_pending_desc"
                    android:layout_toRightOf="@+id/iv_pending"
                    android:text="@string/total_pending"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_normal" />

                <com.gk.myapp.customs.TextViewTitil
                    android:id="@+id/txt_pending_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_normal" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/list_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp" />

</LinearLayout>