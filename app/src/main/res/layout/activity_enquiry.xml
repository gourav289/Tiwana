<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lin_bottom_btns">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--<ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <com.gk.myapp.customs.EditTextTitil
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/list_green"
                    android:gravity="center_vertical"
                    android:hint="@string/name"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <com.gk.myapp.customs.EditTextTitil
                    android:id="@+id/ed_party_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/list_green"
                    android:gravity="center_vertical"
                    android:hint="@string/party_name"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <com.gk.myapp.customs.EditTextTitil
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/list_green"
                    android:gravity="center_vertical"
                    android:hint="@string/phone"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:inputType="phone"/>

                <com.gk.myapp.customs.EditTextTitil
                    android:id="@+id/ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/list_green"
                    android:gravity="center_vertical"
                    android:hint="@string/address"
                    android:inputType="textCapSentences"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />


                <com.gk.myapp.customs.EditTextTitil
                    android:id="@+id/ed_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/list_green"
                    android:gravity="center_vertical"
                    android:hint="@string/city"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <Spinner
                    android:id="@+id/spn_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@null" />

                <com.gk.myapp.customs.EditTextTitil
                    android:id="@+id/ed_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/list_green"
                    android:gravity="left"
                    android:hint="@string/message"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minHeight="100dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />


                <com.gk.myapp.customs.ButtonTitilSemi
                    android:id="@+id/btn_submit"
                    style="@style/MyCustomGreenButton"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="@string/btn_submit"
                    android:textSize="@dimen/text_size_button" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>